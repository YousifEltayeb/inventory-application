<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update a car</title>
</head>
<body>
<!-- Expects types, brands, errors -->
  <%- include("errors.ejs") %>
   <form action="/cars/<%= car.id %>/update" method="POST">
      <label for="model">Model:</label>
      <input type="text" id="model" name="model" value="<%= car.model %>" required />
      <label for="year">Year:</label>
      <input type="number" id="year" name="year" required value="<%= car.year %>"/>
      <label for="price">Price:</label>
      <input type="number" id="price" name="price" required value="<%= car.price %>"/>
      <label for="brand">Select Brand:</label>
      <select name="brand" id="brand">
        <% brands.forEach(function(brand) { %>
            <% if (brand.id === car.brand_id) { %>
                <option value="<%= brand.name %>" selected><%= brand.name %></option>  
            <% } %> 
           <option value="<%= brand.name %>"><%= brand.name %></option>  
        <% }) %>
      </select>
      <label for="type"> Select Type:</label>
      <select name="type" id="type">
        <% types.forEach(function(type) { %>
            <% if (type.id === car.type_id) { %>
                <option value="<%= type.name %>" selected><%= type.name %></option>  
            <% } %> 
           <option value="<%= type.name %>"><%= type.name %></option>  
        <% }) %>
      </select>
      <button type="submit">Submit:</button>
   </form> 
</body>
</html>
